{
  "name": "flowchart-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "install:frontend": "npm install",
    "install:backend": "cd flowchart-backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:browsers": "cd flowchart-backend && npx playwright install",
    "setup": "npm run install:all && npm run install:browsers",
    "dev:frontend": "vite",
    "dev:backend": "node flowchart-backend/src/server.js",
    "start:dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "download": "node download-deps.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tiptap/pm": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "@xyflow/react": "^12.6.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "crawlee": "^3.13.2",
    "elkjs": "^0.9.3",
    "express": "^5.1.0",
    "html-to-image": "^1.11.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "yjs": "^13.6.26",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.2.0",
    "vitest": "^3.1.2"
  }
}
